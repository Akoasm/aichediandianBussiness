<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    tools:context=".welcome.LoginActivity">

    <ImageView
        android:id="@+id/activity_login_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/acdd_log"
        android:layout_centerHorizontal="true"
  />

    <EditText
        android:id="@+id/activity_login_phone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="number"
        android:layout_below="@+id/activity_login_logo"
        android:layout_marginTop="50dp"
        android:hint="请输入手机号" />

    <EditText
        android:id="@+id/activity_login_password"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/activity_login_phone"
        android:hint="请输入密码"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/activity_login_btn_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/activity_login_password"
        android:layout_marginTop="100dp"
        android:background="@color/colorOrange"
        android:text="登陆"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/activity_login_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/activity_login_btn_login"
        android:layout_marginTop="30dp"
        android:text="没有用户名？立即注册" />

    <TextView
        android:id="@+id/activity_login_forget_passwords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/activity_login_register"
        android:text="忘记密码？"
        android:textAppearance="?android:attr/textAppearanceSmall" />
</RelativeLayout>
