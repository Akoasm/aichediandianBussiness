<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical">
    <!--标题栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorOrange">

        <ImageView
            android:id="@+id/activity_order_detail_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单详情"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />
    </RelativeLayout>
    <!--订单-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:id="@+id/activity_order_detail_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorOrange" />

            <TextView
                android:id="@+id/activity_order_detail_sn"
                android:layout_toLeftOf="@id/activity_order_detail_status"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e6e6">

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/colorWhite"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/activity_order_detail_headphoto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_me_headphoto" />

            <TextView
                android:id="@+id/activity_order_detail_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/activity_order_detail_headphoto"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@+id/activity_order_detail_headphoto"
                android:layout_toRightOf="@+id/activity_order_detail_headphoto"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorText" />

            <TextView
                android:id="@+id/activity_order_detail_tv_projectname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/activity_order_detail_tv_name"
                android:layout_alignStart="@+id/activity_order_detail_tv_name"
                android:layout_centerVertical="true"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/activity_order_detail_tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/activity_order_detail_headphoto"
                android:layout_alignLeft="@+id/activity_order_detail_tv_projectname"
                android:layout_alignStart="@+id/activity_order_detail_tv_projectname"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/activity_order_detail_tv_money"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/activity_order_detail_tv_name"
                android:textAppearance="?android:attr/textAppearanceSmall" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e6e6">

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/activity_order_detail_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e6e6e6">

    </LinearLayout>
    <!--商品总价-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e6e6">

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/activity_order_detail_totalprice_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品总价"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/activity_order_detail_totalprice_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/activity_order_detail_totalprice_tv"
                android:gravity="right"
                android:textColor="@color/colorOrange"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/activity_order_detail_vollour_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_order_detail_totalprice_tv"
                android:layout_marginTop="5dp"
                android:text="-代金券"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/activity_order_detail_vollour_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/activity_order_detail_vollour_tv"
                android:layout_toRightOf="@+id/activity_order_detail_vollour_tv"
                android:gravity="right"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/activity_order_detail_integral_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_order_detail_vollour_tv"
                android:layout_marginTop="5dp"
                android:text="-积分"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/activity_order_detail_integral_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/activity_order_detail_integral_tv"
                android:layout_toRightOf="@+id/activity_order_detail_integral_tv"
                android:gravity="right"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/activity_order_detail_balance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_order_detail_integral_tv"
                android:layout_marginTop="5dp"
                android:text="-余额"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/activity_order_detail_balance_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/activity_order_detail_balance_tv"
                android:layout_toRightOf="@+id/activity_order_detail_balance_tv"
                android:gravity="right"
                android:textSize="12sp" />
        </RelativeLayout>
        <!--商品总价-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <!--实付金额-->
            <TextView
                android:id="@+id/activity_order_detail_actual_payment_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:textColor="@color/colorOrange"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e6e6e6">

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_toLeftOf="@+id/activity_order_detail_actual_payment_amount"
                android:text="实付金额:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/activity_order_detail_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/activity_order_detail_actual_payment_amount"
                android:layout_marginTop="5dp"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e6e6">

        </LinearLayout>

    </LinearLayout>

</LinearLayout>