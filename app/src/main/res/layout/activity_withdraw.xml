<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
<include layout="@layout/home_title_layout"
    android:id="@+id/withdraw_title"></include>
    <RelativeLayout
        android:id="@+id/withdraw_bankAccount_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/withdraw_title"
        android:background="@color/white">
        <TextView
            android:id="@+id/withdraw_bankAccount_tv"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="到帐银行卡"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:textSize="15sp"
            android:textColor="#333333"/>
        <TextView
            android:id="@+id/bankCardOwner_tv"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_toRightOf="@id/withdraw_bankAccount_tv"
            android:layout_alignBottom="@id/withdraw_bankAccount_tv"
            android:hint="请选择/添加银行卡"
            android:gravity="center_vertical"
            android:textColor="@color/colorGray"
            android:textSize="13sp"
            android:paddingLeft="20dp"
            android:drawableRight="@drawable/ic_rightarrow"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/withdraw_withdrawMoney_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/withdraw_bankAccount_rl"
        android:background="@color/white">
        <TextView
            android:id="@+id/withdrawMoney_tv"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="提现金额"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:textSize="15sp"
            android:textColor="#333333"/>
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/withdrawMoney_tv"
            android:layout_marginLeft="35dp"
            android:textColor="@color/colorGray" />
        <EditText
            android:id="@+id/withdrawMoney_et"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_toRightOf="@id/tv1"
            android:layout_alignBottom="@id/withdrawMoney_tv"
            android:background="@null"
            android:textSize="13sp"
            android:layout_marginRight="15dp"
            android:textColor="@color/colorGray"
            android:inputType="numberDecimal"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/withdraw_phoneNumber_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/withdraw_withdrawMoney_rl"
        android:background="@color/white">
        <TextView
            android:id="@+id/phoneNumber_tv"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="联系方式"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:textSize="15sp"
            android:textColor="#333333"/>

        <EditText
            android:id="@+id/phoneNumber_et"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_toRightOf="@id/phoneNumber_tv"
            android:layout_alignBottom="@id/phoneNumber_tv"
            android:background="@null"
            android:textSize="13sp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="35dp"
            android:hint="请输入您的手机号"
            android:textColor="@color/colorGray"
            android:inputType="number"
            android:maxLength="11"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/withdraw_verificationCode_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/withdraw_phoneNumber_rl"
        android:background="@color/white">
        <TextView
            android:id="@+id/verificationCode_tv"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="验证码"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:textSize="15sp"
            android:textColor="#333333"/>

        <EditText
            android:id="@+id/verificationCode_et"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_toRightOf="@id/verificationCode_tv"
            android:layout_alignBottom="@id/verificationCode_tv"
            android:background="@null"
            android:textSize="13sp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="50dp"
            android:hint="请输入收到的验证码"
            android:textColor="@color/colorGray" />
        <TextView
            android:id="@+id/getVerificationCode_tv"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:textColor="@color/colorOrange"
            android:text="获取验证码"
            android:gravity="center"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/withdraw_balance_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/withdraw_verificationCode_rl"
        android:background="@color/white">
        <TextView
            android:id="@+id/balance_tv"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="当前余额"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:textSize="15sp"
            android:textColor="#333333"/>
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/balance_tv"
            android:layout_marginLeft="35dp"
            android:textColor="@color/colorGray" />
        <TextView
            android:id="@+id/withdraw_balance_tv"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_toRightOf="@id/tv2"
            android:background="@null"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:layout_marginRight="15dp"
            android:textColor="@color/colorGray" />
    </RelativeLayout>
    <Button
        android:id="@+id/withdraw_sure_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/withdraw_balance_rl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@mipmap/balance_button_background"
        android:text="确认"
        android:textSize="18sp"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/withdrawDetail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/withdraw_sure_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:drawablePadding="10dp"
        android:drawableRight="@mipmap/right_arrow"
        android:text="查看提现记录"
        android:textColor="#ff7001"
        android:textSize="12sp" />
</RelativeLayout>