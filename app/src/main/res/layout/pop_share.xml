<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="202dp"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="202dp">

        <TextView
            android:id="@+id/share_tv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="分享至"
            android:textColor="#333333"
            android:textSize="18sp" />

        <LinearLayout

            android:id="@+id/share_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/share_tv"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"

            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/activity_share_dialog_weixin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wx"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wx"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="微信"
                    android:textColor="#666666"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_share_dialog_weixinmoments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/mm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/wxmoments" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mm"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="朋友圈"
                    android:textColor="#666666"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_share_dialog_qq"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/qq" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/qq"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="QQ"
                    android:textColor="#666666"
                    android:textSize="15sp" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/activity_share_dialog_qqzone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/qzone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView7"

                    android:layout_alignParentRight="true"
                    android:layout_alignStart="@+id/textView7"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/qzone" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/qzone"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="QQ空间"
                    android:textColor="#666666"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/pop_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/share_ll"
            android:background="@color/actionsheet_gray"
            android:layout_marginTop="10dp"></TextView>
        <TextView
            android:id="@+id/pop_cancel_tv"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/pop_view"
            android:text="取消"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#333333"/>


    </RelativeLayout>
</LinearLayout>