<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/home_title_layout"
        android:id="@+id/withdrawDetail_title"></include>
    <ImageView
        android:id="@+id/filterConditions_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_triangle"
        android:padding="15dp"
        android:layout_alignBottom="@id/withdrawDetail_title"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="212dp"
        android:layout_marginTop="3dp"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/withdrawDetail_srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/withdrawDetail_title">
        <ListView
            android:id="@+id/withdrawDetail_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/withdrawDetail_title"></ListView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <View
        android:id="@+id/withdrawDetail_background"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/withdrawDetail_title"
        android:background="#90000000"></View>

</RelativeLayout>