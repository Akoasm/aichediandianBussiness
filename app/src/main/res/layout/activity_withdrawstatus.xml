<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/home_title_layout"
        android:id="@+id/withdrawStatus_title"></include>
 <LinearLayout
     android:id="@+id/image_ll"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:layout_below="@id/withdrawStatus_title"
     android:layout_marginLeft="36dp"
     android:layout_marginTop="44dp">
     <ImageView
         android:id="@+id/status_start_iv"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@mipmap/status_orange"
         android:layout_marginLeft="5dp"
         />
     <ImageView
         android:layout_width="70dp"
         android:layout_height="66dp"
         android:src="@drawable/bg_dottedline"
         android:layout_marginLeft="-24dp"
         android:layerType="software"></ImageView>

     <ImageView
         android:id="@+id/status_dealing_iv"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@mipmap/dealing"
         />
     <ImageView
         android:layout_width="70dp"
         android:layout_height="66dp"
         android:src="@drawable/bg_dottedline"
         android:layout_marginLeft="-24dp"
         android:layerType="software"></ImageView>
     <ImageView
         android:id="@+id/status_finish_iv"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@mipmap/status_gray"
         android:layout_marginLeft="6dp"/>
 </LinearLayout>
    <TextView
        android:id="@+id/bg_line"
        android:layout_width="316dp"
        android:layout_height="0.5dp"
        android:layout_below="@id/image_ll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:background="#d7d7d7"></TextView>
    <TextView
        android:id="@+id/application_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_ll"
        android:layout_below="@id/withdrawStatus_title"
        android:layout_marginTop="44dp"
        android:text="发起提现申请"
        android:textColor="#999999"
        android:textSize="13sp"/>
    <TextView
        android:id="@+id/dealing_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/application_tv"
        android:layout_toRightOf="@id/image_ll"
        android:layout_marginTop="63dp"
        android:text="处理中..."
        android:textSize="13sp"
        android:textColor="#333333"/>
    <TextView
        android:id="@+id/timing_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_ll"
        android:layout_below="@id/dealing_tv"
        android:text="预计xx-xx-xx前到账"
        android:textSize="10sp"
        android:textColor="#999999"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="到账成功"
        android:layout_below="@id/timing_tv"
        android:layout_toRightOf="@id/image_ll"
        android:layout_marginTop="68dp"
        android:textColor="#999999"
        android:textSize="13sp"/>
    <TextView
        android:id="@+id/withdraw_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提现金额"
        android:layout_below="@id/bg_line"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@id/bg_line"/>
    <TextView
        android:id="@+id/withdrawStatus_withdrawMoney_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥111"
        android:layout_below="@id/bg_line"
        android:layout_alignRight="@id/bg_line"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        android:textColor="#333333"/>
    <TextView
        android:id="@+id/extra_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手续费"
        android:layout_alignLeft="@id/bg_line"
        android:layout_below="@id/withdraw_tv"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        android:textColor="#666666"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/withdrawStatus_extraMoney_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥111"
        android:layout_below="@id/withdrawStatus_withdrawMoney_tv"
        android:layout_alignRight="@id/bg_line"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        android:textColor="#333333"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="到账银行卡"
        android:layout_below="@id/extra_tv"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        android:layout_alignLeft="@id/bg_line"/>
    <TextView
        android:id="@+id/withdrawStatus_bankCardInfo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="尾号2222"
        android:layout_below="@id/withdrawStatus_extraMoney_tv"
        android:layout_alignRight="@id/bg_line"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        android:textColor="#333333" />
    <TextView
        android:id="@+id/withdrawStatus_bankInfo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xx银行"
        android:layout_below="@id/withdrawStatus_extraMoney_tv"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        android:textColor="#333333"
        android:layout_toLeftOf="@id/withdrawStatus_bankCardInfo_tv"
        android:layout_marginRight="8dp"/>


</RelativeLayout>