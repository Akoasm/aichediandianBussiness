<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sina.rwxchina.aichediandianbussiness.Merchant.MerchantAddressActivity">
    <!--标题栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorOrange">

        <ImageView
            android:id="@+id/activity_merchant_address_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="标记地址"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

        <Button
            android:id="@+id/activity_merchant_Address_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:text="确定"
            android:textSize="20sp"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#9f9b9b"
        android:layout_height="40dp">
        <EditText
            android:id="@+id/merchabt_address_search_tv"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:hint="请填写详细地址"
            android:textSize="14sp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/merchabt_address_search_bt"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:text="查找"
            android:layout_margin="5dp"
            android:background="@color/colorOrange"
            android:textColor="@color/colorWhite"
            android:layout_height="match_parent" />
    </LinearLayout>
    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />
</LinearLayout>
